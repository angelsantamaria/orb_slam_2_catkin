<?xml version="1.0"?>
<launch>

  <arg name="image"/> 

  <!-- Path of the file containing the ORB vocabulary. -->
  <arg name="vocabulary_file_path" default="$(find orb_slam_2_catkin)/vocabulary/ORBvoc.txt"/>
  <!-- Path of the file containing ORB SLAM2 configuration. -->
  <arg name="orb_slam2_settings_file_path" default = "$(find orb_slam_2_catkin)/config/aeroarms/aeroarms.yaml"/>
    <!-- Path of the file containing camera calibration. -->
  <arg name="camera_calibration_file_path" default = "$(find orb_slam_2_catkin)/config/aeroarms/camchain.yaml"/>

  <!-- ORB SLAM2 MONO -->
  <node pkg="orb_slam_2_ros" name="orb_slam_2_ros_node" type="orb_slam_2_ros_node" output="screen">
    <param name="interface_type"            value="mono" />
    <param name="vocabulary_file_path"      value="$(arg vocabulary_file_path)"/>
    <param name="settings_file_path"        value="$(arg orb_slam2_settings_file_path)"/>
    <param name="visualization" type="bool" value="true"/>
    <remap from="camera/image_raw" to="$(arg image)"/>
  </node>

</launch>
